@using GYM_MANAGER_PROJECTFSOFT.Models;
@model IEnumerable<CLUB>

@{
    ViewBag.Title = "ClubTables";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2 style="text-align: center;">Club List</h2>

<p class="text-right">
    <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Create New", "CreateClub")</button>
</p>    

<table class="table">
    <thead style="background-color: #446ad7;">
        <tr style="color: white;">
            <th>
                <p class="text-center">ClubName</p>
            </th>
            <th>
                <p class="text-center">Address</p>
            </th>
            <th>
                <p class="text-center">PhoneNumber</p>
            </th>
            <th>
                <p class="text-center">Gmail</p>
            </th>
            <th>
                <p class="text-center">Image1</p>
            </th>
            <th>
                <p class="text-center">Image2</p>
            </th>
            <th>
                <p class="text-center">Image3</p>
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <p class="text-center">@Html.DisplayFor(modelItem => item.TenClub)</p>
            </td>
            <td>
                <p class="text-center">@Html.DisplayFor(modelItem => item.DiaChi)</p>
            </td>
            <td>
                <p class="text-center">@Html.DisplayFor(modelItem => item.SoDienThoai)</p>
            </td>
            <td>
                <p class="text-center">@Html.DisplayFor(modelItem => item.Gmail)</p>
            </td>
            <td>
                <p class="text-center"><img src="@Url.Content("~/Content/ImagesGym/" + item.HinhAnh1)" alt="" style="width: 200px; height: 150px"></p>
            </td>
            <td>
                <p class="text-center"><img src="@Url.Content("~/Content/ImagesGym/" + item.HinhAnh2)" alt="" style="width: 200px; height: 150px"></p>
            </td>
            <td>
                <p class="text-center"><img src="@Url.Content("~/Content/ImagesGym/" + item.HinhAnh3)" alt="" style="width: 200px; height: 150px"></p>
            </td>
            <td>
                <a class="btn btn-outline-success" href="@Url.Action("EditClub", "ClubManager", new {id = item.MaClub})" style="margin-bottom: 10px;">Edit</a>
                <a class="btn btn-outline-danger" href="@Url.Action("DeleteClub", "ClubManager", new {id = item.MaClub})">Delete</a>
            </td>
        </tr>
    }
</table>
