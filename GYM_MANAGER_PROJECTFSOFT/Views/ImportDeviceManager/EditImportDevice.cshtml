@model GYM_MANAGER_PROJECTFSOFT.Models.NHAPTHIETBI

@{
    ViewBag.Title = "EditImportDevice";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2 class="text-center">Edit Import Device</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaYeuCauNhap)

    @Html.HiddenFor(model => model.MaLoaiThietBi)
    <div class="form-group">
        <label class="control-label col-md-2">DeviceName</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenThietBi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenThietBi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Amount</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">DeviceImage</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HinhThietBi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HinhThietBi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ImportDate</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NgayYeuCau, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayYeuCau, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Required'sName'</label>
        <div class="col-md-10">
            @Html.DropDownList("MaTaiKhoan", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaTaiKhoan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Describe</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">CategoryName</label>
        <div class="col-md-10">
            @Html.DropDownList("MaLoaiThietBi", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaLoaiThietBi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Status</label>
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.TrangThaiNhapThietBi, new { @class = "form-control", @readonly = "readonly"} )
            @Html.ValidationMessageFor(model => model.TrangThaiNhapThietBi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-outline-success" />
        </div>
    </div>
</div>
}
<style>
    form {
        padding: 25px;
        margin: 25px;
        box-shadow: 0 2px 5px #f5f5f5;
        background: #f5f5f5;
    }
</style>

<div>
    <button type="button" class="btn btn-outline-info">@Html.ActionLink("Back to List", "ImportDeviceTable")</button>
</div>


