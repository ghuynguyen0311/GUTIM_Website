@model GYM_MANAGER_PROJECTFSOFT.Models.GIAMGIA

@{
    ViewBag.Title = "EditCoupon";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2 class="text-center">Edit Coupon</h2>

@using (Html.BeginForm("EditCoupon", "PackageAndCouponManager", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.MaGiamGia)
        @Html.HiddenFor(x => x.MaGoiTap)

        <div class="form-group">
            <label class="control-label col-md-2">Discount Code: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.CodeGiamGia,new { @class = "form-control", @readonly = "readonly" } )
                @Html.ValidationMessageFor(model => model.CodeGiamGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Discount Amount: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoTienGiamGia, new { @class = "form-control"} )
                @Html.ValidationMessageFor(model => model.SoTienGiamGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Amount</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Soluong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}
<style>
    form {
        padding: 25px;
        margin: 25px;
        box-shadow: 0 2px 5px #f5f5f5;
        background: #f5f5f5;
    }
</style>

<div>
    <button type="button" class="btn btn-outline-info">@Html.ActionLink("Back to List", "CouponList")</button>
</div>


