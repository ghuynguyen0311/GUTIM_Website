@model GYM_MANAGER_PROJECTFSOFT.Models.PackageDetail


@{
    ViewBag.Title = "EditPackage";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}

<h2 class="text-center">Edit Import Device</h2>

@using (Html.BeginForm("EditPackage", "PackageAndCouponManager", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(x => x.MaGoiTap)

        <div class="form-group">
            <label class="control-label col-md-2">Package Name: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenGoiTap, new { @class = "form-control", @readonly = "readonly" } )
                @Html.ValidationMessageFor(model => model.TenGoiTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Club Name: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenClub, new { @class = "form-control", @readonly = "readonly" } )
                @Html.ValidationMessageFor(model => model.TenClub, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Service Name: </label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TenDichVu, new { @class = "form-control", @readonly = "readonly" } )
                @Html.ValidationMessageFor(model => model.TenDichVu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Duration: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThoiHanGoiTap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThoiHanGoiTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Package Price</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaGoiTap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaGoiTap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}
<style>
    form {
        padding: 25px;
        margin: 25px;
        box-shadow: 0 2px 5px #f5f5f5;
        background: #f5f5f5;
    }
</style>

<div>
    <button type="button" class="btn btn-outline-info">@Html.ActionLink("Back to List", "PackageTable")</button>
</div>
