@using GYM_MANAGER_PROJECTFSOFT.Models
@model IEnumerable<GOITAP>

@{ 
    IEnumerable<THIETBI> lstThietBi = ViewBag.ThietBi as IEnumerable<THIETBI>;
}

@{
    ViewBag.Title = "ServiceDetail";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<section class="membership-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>MEMBERSHIP PLANS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="membership-item">
                        <div class="mi-title">
                            <h4>@item.TenGoiTap</h4>
                            <div class="triangle"></div>
                        </div>
                        <h2 class="mi-price">@item.GiaGoiTap $<span>/@item.ThoiHanGoiTap Days</span></h2>
                        <ul>
                            <li>
                                <p>Duration</p>
                                <span>@item.ThoiHanGoiTap Days</span>
                            </li>
                            <li>
                                <p>Personal trainer</p>
                                <span>15 person</span>
                            </li>
                            <li>
                                <p>Amount of people</p>
                                <span>5 person</span>
                            </li>
                            <li>
                                <p>Number of visits</p>
                                <span>Unlimited</span>
                            </li>
                        </ul>
                        @if (Session["TaiKhoan"] != null && Session["TaiKhoan"] != "")
                        {
                            TAIKHOAN taikhoan = (TAIKHOAN)Session["TaiKhoan"];
                            <a href="@Url.Action("RegisterPackageForm", "RegisterPackage", new {MaTaiKhoan = taikhoan.MaTaiKhoan, MaDichVu = item.MaDichVu, MaGoiTap = item.MaGoiTap, strURL = Request.Url.ToString()})" class="primary-btn membership-btn">Start Now</a>
                        }
                        else
                        {
                            <a href="#" id="display-loginform" class="primary-btn membership-btn">Start Now</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="classes-section spad" style="margin-top: 40px;">
    <div class="container">
        <div class="row" style="margin-bottom: 40px;">
            <div class="col-lg-12">
                <div class="section-title" style="text-align: center;">
                    <h2>SERVICE EQUIPMENT</h2>
                </div>
            </div>
        </div>
        <div class="row ">
            @foreach (var item in lstThietBi)
            {
                <div class="col-lg-4" style="height: 255px; margin-bottom: 50px;">
                    <div style="background-image: Url(@Url.Content("~/Content/ImagesGym/" + item.HinhThietBi)); width: 100%; height: 255px;  background-size: cover;">
                        <div class="single-class-item set-bg" style="position: relative;">
                            <div class="si-text"
                                 style="position: absolute; left: 0; top: 165px; width: 100%; background: rgba(0, 0, 0, 0.4); padding-left: 30px; padding-top: 10px; padding-bottom: 15px;">
                                <h4 style="color: white;">@item.TenThietBi</h4>
                                <span style="color: white;"><i class="fa fa-user"></i>@item.LOAITHIETBI.TenLoaiThietBi</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
