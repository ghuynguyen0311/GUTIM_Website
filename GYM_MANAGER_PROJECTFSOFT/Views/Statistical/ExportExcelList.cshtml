@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<GYM_MANAGER_PROJECTFSOFT.Models.ExportExcelModel>

@{
    ViewBag.Title = "ExportExcelList";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}



<h2 class="text-center">DAILY INCOME DETAIL</h2>


<style>
    .pagination a {
        color: black;
        float: left;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color .3s;
    }
        /* set the style for the active class */
        .pagination a.active {
            background-color: dodgerblue;
            color: deepskyblue;
        }
        /* add background color when user hovers on inactive class */
        .pagination a:hover:not(.active) {
            background-color: #ddd;
        }
</style>


<table class="table">
    <thead style="background-color: #446ad7;">
        <tr style="color: white;">
            <th>
                <p class="text-center">Register Code</p>
            </th>
            <th>
                <p class="text-center">Club Name</p>
            </th>
            <th>
                <p class="text-center">Package Name</p>
            </th>
            <th>
                <p class="text-center">Card Code</p>
            </th>
            <th>
                <p class="text-center">Register Date</p>
            </th>
            <th>
                <p class="text-center">Peer</p>
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <p class="text-center">@item.MaDangKyGoiTap</p>
            </td>
            <td>
                <p class="text-center">@item.TenClub</p>
            </td>
            <td>
                <p class="text-center">@item.TenGoiTap</p>
            </td>
            <td>
                <p class="text-center">@item.CodeThe</p>
            </td>
            <td>
                <p class="text-center">@item.NgayDangKi.Value.ToString("MM/dd/yyyy")</p>
            </td>
            <td>
                <p class="text-center">$@item.GiaDangKi</p>
            </td>
        </tr>
    }
</table>

<p class="text-center">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount </p>

<div class="nav justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("ExportExcelList", new { page = page }))
</div>


<div class="text-right" style="overflow: hidden; padding: 1px 30px 0px 0px; margin-top: 10px; margin-bottom: 10px;">
    <a class="btn btn-outline-info" href="@Url.Action("ExportToExcel", "Statistical")">Export to Excel</a>
</div>